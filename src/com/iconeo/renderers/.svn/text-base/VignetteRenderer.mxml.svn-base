<?xml version="1.0" ?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
    horizontalAlign="center"
    verticalGap="0" borderStyle="inset" borderThickness="10" borderColor="#000000"
    width="130" height="130" backgroundAlpha="0" xmlns:tools="com.iconeo.tools.*">
    <mx:Canvas>
    	<mx:Image source="{data.fichierVignette}">
    		<mx:filters>
    			<mx:DropShadowFilter/>
    		</mx:filters>
    	</mx:Image>
    </mx:Canvas>
    <mx:Spacer height="10"/>
    <mx:TextArea backgroundAlpha="0" borderStyle="none" text="{data.libelle}"
    	width="90" height="33" color="#FFFFFF"
    	editable="false" selectable="false"/>
</mx:VBox>